@model IEnumerable<SaudiaDocumentManagment.category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Head{

}
   
   

    <div class="container">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#CreatePartial">
