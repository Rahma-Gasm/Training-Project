@model ViewModels.CreateSubCategoryViewModel;

@{
    ViewData["Title"] = "CreateSub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Sub category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateSub">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
