@model IEnumerable<IdentityUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    foreach (var user in Model)
    {
        <div class="card mb-3">
    <div class="card-header">
        Username : @user.UserName
    </div>
    <div class="card-body">
        <h5 class="card-title">@user.Email</h5>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-controller="Account" asp-route-id="@user.Id" class="btn btn-danger">Edit</a>
        <a asp-action="Delete" asp-controller="Account" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
    </div>
</div>
    }
}
else
{
    <div class="card">
    <div class="card-header">
        No users created yet
    </div>
</div>
}