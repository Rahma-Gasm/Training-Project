
@inject SignInManager<IdentityUser> signInManager;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    

    @RenderSection("Head", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="~/Images/Saudia.jpeg" alt="">

        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="https://localhost:5001">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#down">About</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown">
                        Menu
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                       @if (signInManager.IsSignedIn(User))
                        {

                            <form method="post" asp-action="logout" asp-controller="account">
                                <button type="submit" class="nav-link btn btn-link py-0" style="width:auto">
                                    logout @User.Identity.Name

                                </button>

                            </form>
                        }
                        else
                        {
    
                            <a asp-action="register"asp-controller="account" class="dropdown-item" >Sign up</a>
                            <a asp-action="login" asp-controller="account" class="dropdown-item">Sign in</a>
                                                   
                            }

                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="https://localhost:5001/categories/index">Documents</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://www.saudia.com/help/faqs/faq">FAQ'S</a>
                </li>
            </ul>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer id="u__footer" class="roman" tabindex="-1">
        <!-- Section: Social media -->
        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
            
            <!-- Right -->
            <div>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-google"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-instagram"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="" class="me-4 text-reset">
                    <i class="fab fa-github"></i>
                </a>
            </div>
            <!-- Right -->
        </section>
        <!-- Section: Social media -->
        <!-- Section: Links  -->
        <section class="">
            <div class="container text-md-start mt-5">
                <!-- Grid row -->
                <div class="row">
                    <!-- Grid column -->
                    <div class="col-6">
                        <!-- Content -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            <i class="fas fa-gem me-3"></i>about us
                        </h6>
                        <p class="text-justify">
                            Saudia is formerly known as Saudi Arabian Airlines. The airline's main
                            operational base is at King Abdulaziz International Airport in Jeddah. It operates
                            domestic and international scheduled flights to over 85 destinations in the Middle
                            East, Africa, Asia, Europe, and North America.
                        </p>
                    </div>
                   
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <!-- Links -->
                        <h6 class="text-uppercase fw-bold mb-4">
                            get in touch
                        </h6>
                        <div class="col-md-12 mb-4">

                            <button type="button" class="btn btn-li"><i class="fab fa-linkedin-in"></i></button>
                            <button type="button" class="btn btn-pin"><i class="fab fa-pinterest"></i></button>
                            <button type="button" class="btn btn-dribbble"><i class="fab fa-dribbble left"></i></button>
                            <button type="button" class="btn btn-vk"><i class="fab fa-vk"></i></button>
                            <button type="button" class="btn btn-git"><i class="fab fa-github"></i></button>

                        </div>
                    </div>
                    <!-- Grid column -->
                </div>
                <!-- Grid row -->
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
            Copyright © Saudia Airlines 2020 all rights reserved
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script> 

    @RenderSection("Scripts", required: false)

</body>
</html>
