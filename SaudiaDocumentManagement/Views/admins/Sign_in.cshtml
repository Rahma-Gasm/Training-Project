@model SaudiaDocumentManagment.admin
@{
    ViewData["Title"] = "Details";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
               <center><label asp-for="admin_id" class="control-label"></label>
               <input asp-for="admin_id" class="form-control" /></center>
               <center><span asp-validation-for="admin_id" class="text-danger"></span></center>
            </div>
            <div class="form-group">
                <center><label asp-for="password" class="control-label"></label>
                <input asp-for="password" class="form-control" /></center>
                <center><span asp-validation-for="password" class="text-danger"></span></center>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>Don't have an account?<a href="https://localhost:5001/admins/sign_up"> Sign up</a></p>
</div>