@model SaudiaDocumentManagment.admin
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

   <hr />
    <div class="row justify-content-center">
        <div class="col-md-3 text-center">
            <link rel="stylesheet" href="css/bootstrap.css">
            <form asp-action="Create">
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <center>
                    <div class="form-group">

                        <label asp-for="name" class="control-label"></label>
                        <input asp-for="name" class="form-control text-center" />

                        <center><span asp-validation-for="name" class="text-danger"></span></center>
                    </div>
                </center>
                <div class="form-group">
                    <center>
                        <label asp-for="mobile_number" class="control-label"></label>
                        <input asp-for="mobile_number" class="form-control" />
                    </center>
                    <center><span asp-validation-for="mobile_number" class="text-danger"></span></center>
                </div>
                <div class="form-group">
                    <center>
                        <label asp-for="date_of_birth" class="control-label"></label>
                        <input asp-for="date_of_birth" class="form-control" />
                    </center>
                    <center><span asp-validation-for="date_of_birth" class="text-danger"></span></center>
                </div>
                <div class="form-group">
                    <center>
                        <label asp-for="password" class="control-label"></label>
                        <input asp-for="password" class="form-control" />
                    </center>
                    <center><span asp-validation-for="password" class="text-danger"></span></center>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Register" class="btn btn-primary">
                    </div>
                </div>
            </form>
        </div>
    </div>
